{
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.codeActionsOnSave": {
        "source.fixAll": "never",
        "source.organizeImports": "never"
    },
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.formatOnSave": false,
    "editor.renderControlCharacters": true,
    "editor.renderWhitespace": "all",
    "editor.wordWrapColumn": 100,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.git": true,
        "**/.svn": true,
        "**/.idea": true,
        "**/.DS_Store": true,
        "**egg-info**": true,
        "**/.mim/**": true,
        "**/*.swp": true,
        "**/*~": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/.mypy_cache": true,
        "**/.ipynb_checkpoints": true,
        "**/*.egg-info": true,
        "**/*.pyc": true,
        "**/.venv": true,
        "**/venv": true,
        "**/.tox": true,
    },
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/.git/**": true,
        "**/.svn/**": true,
        "**/.idea/**": true,
        "**/.DS_Store": true,
        "**egg-info**": true,
        "**/.mim/**": true,
        "**/.pytest_cache/**": true,
        "**/.ruff_cache/**": true,
        "**/.mypy_cache/**": true,
        "**/.ipynb_checkpoints/**": true,
        "**/*.pyc": true,
        "**/node_modules/**": true,
        "**/bower_components/**": true,
        "**/build/**": true,
        "**/_build/**": true,
        "**/dist/**": true,
        "**/.eggs/**": true,
        "**/eggs/**": true,
        "**/.venv/**": true,
        "**/venv/**": true,
        "**/.tox/**": true,
        "**/.nox/**": true,
        "**/.direnv/**": true,
        "**/mambaforge/**": true,
        "**/.cache/**": true,
        "**/.hypothesis/**": true,
        "**/tmp/**": true,
        // ML Data
        "data{,/**}": true,
        "datasets{,/**}": true,
        "wandb{,/**}": true,
        "coco{,/**}": true,
        "**/train2014/**": true,
        "**/val2014/**": true,
        "**/train2017/**": true,
        "**/val2017/**": true,
        "**/coco_vanilla/**": true,
        "**/coco/**/*.txt": true,
        "**/coco/annotations/**": true,
        "**/coco/images/**": true,
        "**/coco/labels/**": true,
        "**/data/eval_3.2/**": true,
        "**/data/eval2-samples/**": true,
        "**/data/tests/eval*": true,
        "**/messages/messages/**": true,
        "**/mmcv/tests/**": true,
        "**/semafor/datalake/**": true,
        "**/semafor/sandbox/**": true,
        "**/vanilla/**": true,
        // ML Artifacts & Logs
        "**/checkpoints/**": true,
        "**/experiments/**": true,
        "**/lightning_logs/**": true,
        "**/output/**": true,
        "**/outputs/**": true,
        "**/results/**": true,
        "**/save/**": true,
        "**/weights/**": true,
        "**/work_dirs/**": true,
        "**/*.ckpt": true,
        "**/*.pkl": true,
        "**/*.pt": true
    },
    "python.analysis.extraPaths": [
        // Add paths for projects installed as editable installs
        "${workspaceFolder}/docker_mmdet/lib/cocobetter/PythonAPI",
        "${workspaceFolder}/docker_mmdet/lib/sahi",
        "${workspaceFolder}/docker_mmdet",
    ],
    "python.envFile": "${workspaceFolder}/.env",
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": false,
    "rewrap.wrappingColumn": 100,
    // --- Search: Exclude artifacts and data from search results ---
    // Note: watchers (files.watcherExclude) are automatically excluded from search
    "search.exclude": {
        // All entries from files.watcherExclude are automatically excluded from search.
        // This list only needs to contain patterns NOT in files.watcherExclude.
        "**/*.code-search": true,
        "**/work_dirs/**": true,
    },
    "flake8.enabled": false,
}